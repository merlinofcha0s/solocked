#!/usr/bin/env groovy

node {
    stage('checkout') {
        deleteDir()
        checkout scm
    }

    stage('check java') {
        sh "java -version"
    }

    stage('clean') {
        sh "chmod +x mvnw"
        sh "./mvnw clean"
    }

    stage('packaging app') {
        sh "./mvnw clean package -Pprod -Dmaven.test.skip=true"
    }

    stage('deploy on boxfuse test env') {
        sh "/home/raiden/tools/boxfuse/boxfuse run -env=test -envvars.SPRING_PROFILES_ACTIVE=test -envvars.SERVER_SSL_KEY_STORE=classpath:keystore-test.p12 -envvars.SERVER_SSL_KEY_STORE_PASSWORD=MrmV5D436FzySi9L -envvars.SERVER_SSL_KEYSTORETYPE=PKCS12 -envvars.SERVER_SSL_KEYALIAS=ninjaccount-test -jvm.args='-Djdk.tls.ephemeralDHKeySize=2048' -ports.https=443 -ports.http=80"
    }
}

#!/usr/bin/env groovy

node {
    stage('checkout') {
        deleteDir()
        checkout scm
    }

    stage('check java') {
        sh "java -version"
    }

    stage('clean') {
        sh "chmod +x mvnw"
        sh "./mvnw clean"
    }

    stage('packaging app') {
        sh "./mvnw clean package -Ptest -Dmaven.test.skip=true"
    }

    stage('deploy on boxfuse test env') {
        sh "/home/raiden/tools/boxfuse/boxfuse run -env=test -envvars.SPRING_PROFILES_ACTIVE=test -ports.https=443 -ports.http=80"
    }
}

#!/usr/bin/env groovy

node {
    stage('checkout') {
        deleteDir()
        checkout scm
    }

    stage('check java') {
        sh "java -version"
    }

    stage('clean') {
        sh "chmod +x mvnw"
        sh "./mvnw clean"
    }

    stage('install tools') {
        sh "./mvnw com.github.eirslett:frontend-maven-plugin:install-node-and-yarn -DnodeVersion=v8.11.3 -DyarnVersion=v1.7.0"
    }

    stage('yarn install') {
        sh "./mvnw com.github.eirslett:frontend-maven-plugin:yarn"
    }

    stage('packaging app') {
        sh "./mvnw clean com.github.eirslett:frontend-maven-plugin:yarn -Dfrontend.yarn.arguments=webpack:prod package -Pprod -Dmaven.test.skip=true"
    }

    stage('deploy on boxfuse prod env') {
        sh "/home/ubuntu/tools/boxfuse/boxfuse run -env=prod -envvars.SPRING_PROFILES_ACTIVE=prod -envvars.SERVER_SSL_KEY_STORE=classpath:keystore-prod.p12 -envvars.SERVER_SSL_KEY_STORE_PASSWORD=S58J29Q9HhP84s1sQEYrsbYvRD9v2har -envvars.SERVER_SSL_KEYSTORETYPE=PKCS12 -envvars.SERVER_SSL_KEYALIAS=ninjaccount-prod -jvm.args='-Djdk.tls.ephemeralDHKeySize=2048' -ports.https=443 -ports.http=80"
    }
}

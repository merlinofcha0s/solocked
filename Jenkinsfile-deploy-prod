#!/usr/bin/env groovy

node {
    stage('checkout') {
        deleteDir()
        checkout scm
    }

    stage('check java') {
        sh "java -version"
    }

    stage('clean') {
        sh "chmod +x mvnw"
        sh "./mvnw clean"
    }

    stage('packaging app') {
        sh "./mvnw clean package -Pprod -Dmaven.test.skip=true"
    }

    stage('deploy on boxfuse prod env') {
        sh "/home/raiden/tools/boxfuse/boxfuse run -env=prod -envvars.SPRING_PROFILES_ACTIVE=prod -ports.https=443 -ports.http=80 '-jvm.args=-Deureka.instance.ip-address=$BOXFUSE_INSTANCE_IP'"
    }
}

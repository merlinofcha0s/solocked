#!/usr/bin/env groovy

node {
    stage('checkout') {
        deleteDir()
        checkout scm
    }

    stage('check java') {
        sh "java -version"
    }

    stage('clean') {
        sh "chmod +x mvnw"
        sh "./mvnw clean"
    }

    stage('packaging app') {
        sh "./mvnw clean package -Ptest -Dmaven.test.skip=true"
    }

    stage('deploy on boxfuse prod env') {
        sh "/home/raiden/tools/boxfuse/boxfuse run -env=prod -envvars.SPRING_PROFILES_ACTIVE=prod"
    }
}
